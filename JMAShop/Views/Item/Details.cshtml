@model ItemDetailViewModel

<div class="thumbnail">
    <img alt="@Model.Item.Name" src="@Model.Item.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Item.Price</h3>
        <h3>
            <a href="#">@Model.Item.Name</a>
        </h3>
        <h4>@Model.Item.ShortDescription</h4>
        <p>@Model.Item.LongDescription</p>
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-ItemId="@Model.Item.ItemId">Add to cart</a>
        </p>
    </div>
</div>
<h3>Reviews for this Item</h3>

@{
    if (@Model.Item.ItemReviews != null)
    {
        @foreach (var review in @Model.Item.ItemReviews)
        {
            @review.Review
            <hr />
        }
    }
}


            <form asp-controller="Item" asp-action="Details" method="post" class="form-horizontal" role="form">
                <h4>Write a review</h4>
                <hr />
                <input type="hidden" name="ItemId" id="ItemId" asp-for="@Model.Item.ItemId" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Review" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Review" class="form-control" />
                        <span asp-validation-for="Review" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Send review" />
                    </div>
                </div>

            </form>